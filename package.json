{
  "name": "cms-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm -F web dev\" \"pnpm -F api start:dev\"",
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "db:generate": "pnpm -F api db:generate",
    "db:push": "pnpm -F api db:push",
    "db:migrate": "pnpm -F api db:migrate",
    "db:seed": "tsx prisma/seed.ts",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "test:e2e": "pnpm -F web test:e2e"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "tsconfig-paths": "4.2.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}
